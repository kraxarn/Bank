<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Bank.Views.HostPage"
	Title="Create">

    <ContentPage.Content>

        <StackLayout
	        Margin="32">

			<Label
				x:Name="LabelRoom"
				FontAttributes="Bold"
				FontSize="32"
	            Text="RoomID: "/>

			<StackLayout
				Margin="0, 16, 0, 0"
				HorizontalOptions="CenterAndExpand"
				Orientation="Horizontal">

				<Entry
					x:Name="EntryMoney"
					Placeholder="Starting Money"
					Keyboard="Numeric"/>

				<Picker
					x:Name="PickerMoney"
					Title="Unit">
					<Picker.Items>
						<x:String>M</x:String>
						<x:String>K</x:String>
					</Picker.Items>
				</Picker>

			</StackLayout>

	        <Label
		        Margin="0, 16, 0, 0"
				FontSize="16"
				FontAttributes="Bold"
		        Text="Players"/>

			<ListView
				x:Name="ViewUsers">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ImageCell
							Text="{Binding Name}"
							Detail="{Binding Address}"
							ImageSource="{Binding Avatar}"/>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			
			<Button
				Text="Start"
				Clicked="ButtonStart_OnClicked"/>

		</StackLayout>

    </ContentPage.Content>
</ContentPage>