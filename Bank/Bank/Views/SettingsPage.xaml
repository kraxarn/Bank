<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Bank.Views.SettingsPage"
	Title="Settings">

	<TableView
		Intent="Settings">
		<TableRoot>
			
			<!-- Application Settings -->
			<TableSection
				Title="Application">

				<SwitchCell
					x:Name="CellDarkMode"
					Text="Dark Mode"
					OnChanged="DarkMode_OnChanged"/>

			</TableSection>

			<!-- Advanced Settings -->
			<TableSection
				Title="Advanced">

				<EntryCell
					Label="Port"
					Placeholder="13000"/>

				<EntryCell
					Label="Timeout"
					Placeholder="5000"/>

			</TableSection>
			
			<!-- Profile -->
			<TableSection
				Title="Profile">

				<ViewCell>
					<Button
						Text="Edit Profile"
						HorizontalOptions="FillAndExpand"
						Clicked="ButtonProfile_OnClicked"/>
				</ViewCell>

			</TableSection>
			
			<!-- Info -->
			<TableSection
				Title="Device Info">

				<ViewCell
					IsEnabled="False">
					<StackLayout
						Orientation="Horizontal"
						Margin="12">

						<Label
							Text="Name"/>

						<Label
							TextColor="Gray"
							HorizontalOptions="EndAndExpand"
							x:Name="LabelDeviceName"
							Text="Unknown"/>

					</StackLayout>
				</ViewCell>

				<ViewCell
					IsEnabled="False">
					<StackLayout
						Orientation="Horizontal"
						Margin="12">

						<Label
							Text="OS"/>

						<Label
							TextColor="Gray"
							HorizontalOptions="EndAndExpand"
							x:Name="LabelDeviceOs"
							Text="Unknown"/>

					</StackLayout>
				</ViewCell>

			</TableSection>

		</TableRoot>
	</TableView>

</ContentPage>