<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Bank.Views"
	x:Class="Bank.Views.MainPage"
	BarBackgroundColor="{DynamicResource backgroundColor}">
	
	<NavigationPage
		BarBackgroundColor="{DynamicResource backgroundColor}"
		BarTextColor="{DynamicResource textColor}"
		x:Name="PageCreate"
		Title="Create">
		<x:Arguments>
			<views:HostPage/>
		</x:Arguments>
	</NavigationPage>

	<NavigationPage
		BarBackgroundColor="{DynamicResource backgroundColor}"
		BarTextColor="{DynamicResource textColor}"
		x:Name="PageJoin"
		Title="Join">
		<x:Arguments>
			<views:JoinPage/>
		</x:Arguments>
	</NavigationPage>

	<NavigationPage
		BarBackgroundColor="{DynamicResource backgroundColor}"
		BarTextColor="{DynamicResource textColor}"
		x:Name="PageSettings"
		Title="Settings">
		<x:Arguments>
			<views:SettingsPage/>
		</x:Arguments>
	</NavigationPage>

</TabbedPage>