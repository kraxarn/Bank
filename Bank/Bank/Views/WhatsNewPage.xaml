<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Bank.Views.WhatsNewPage"
	BackgroundColor="{DynamicResource backgroundColor}">

    <ContentPage.Content>

		<StackLayout
			Margin="32">
			
			<Label
				TextColor="{DynamicResource textColor}"
				Margin="8"
				FontAttributes="Italic"
				FontSize="12"
				x:Name="LabelNotice"
				HorizontalTextAlignment="Center"
				IsVisible="False"
				Text="Installed version doesn't match latest version. You're possibly using an old version."/>

			<Label
				TextColor="{DynamicResource textColor}"
	            x:Name="LabelLog"
				Text="Please wait..."/>

			<StackLayout
				VerticalOptions="EndAndExpand">

				<Button
					Text="ok cool"
					Clicked="ButtonLeave_OnClicked"/>

			</StackLayout>

		</StackLayout>

    </ContentPage.Content>

</ContentPage>