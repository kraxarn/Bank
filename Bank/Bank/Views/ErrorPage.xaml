<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Bank.Views.ErrorPage"
	BackgroundColor="{DynamicResource backgroundColor}">

    <ContentPage.Content>

        <StackLayout
	        Margin="16">

            <Label
				TextColor="{DynamicResource textColor}"
				x:Name="LabelTitle"
				FontAttributes="Bold"
				FontSize="18"
                HorizontalOptions="CenterAndExpand"/>
			
			<Label
				TextColor="{DynamicResource textColor}"
				x:Name="LabelMessage"
				Margin="8"/>
			
			<Label
				TextColor="{DynamicResource textColor}"
				x:Name="LabelDetails"
				FontSize="14"/>
			
			<Button
				Text="Dismiss"
				Margin="16"
				VerticalOptions="EndAndExpand"
				Clicked="ButtonDismiss_OnClicked"/>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>