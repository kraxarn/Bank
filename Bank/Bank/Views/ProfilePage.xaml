<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank.Views.ProfilePage"
             Title="Profile">
	<ContentPage.Content>

		<StackLayout
			Margin="32, 92, 32, 32">

			<Grid
				HeightRequest="260">

				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto"/>
					<ColumnDefinition
						Width="1*"/>
					<ColumnDefinition
						Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Button
					VerticalOptions="Center"
					Grid.Column="0"
					FontSize="32"
					Text="◄"
					Clicked="ButtonPrevious_OnClicked"/>

				<Image
					Grid.Column="1"
					VerticalOptions="Center"
					x:Name="ImageAvatar">
						<Image.GestureRecognizers>
							<PanGestureRecognizer PanUpdated="PanUpdated"/>
						</Image.GestureRecognizers>
				</Image>

				<Button
					VerticalOptions="Center"
					Grid.Column="2"
					FontSize="32"
					Text="►"
					Clicked="ButtonNext_OnClicked"/>

			</Grid>

			<Entry
				x:Name="EntryName"
				Placeholder="Name"
				PropertyChanged="EntryName_OnPropertyChanged"/>

		</StackLayout>

	</ContentPage.Content>
</ContentPage>