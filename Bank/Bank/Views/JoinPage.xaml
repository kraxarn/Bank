<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Bank.Views.JoinPage"
	Title="Join"
	BackgroundColor="{DynamicResource backgroundColor}">

    <ContentPage.Content>

		<StackLayout
			VerticalOptions="CenterAndExpand"
	        Margin="32">

			<Entry
				BackgroundColor="{DynamicResource controlColor}"
				TextColor="{DynamicResource textColor}"
				x:Name="EntryRoom"
				Keyboard="Numeric"
				Placeholder="Room"
				TextChanged="EntryRoom_OnTextChanged"/>
			
			<Button
				x:Name="ButtonConnect"
				IsEnabled="False"
				Text="Connect"
				Clicked="ButtonConnect_OnClicked"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>